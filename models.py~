#models for Event Log

from django.db import models

class Sport(models.Model):
    sport = models.CharField(max_length=20)

class Event(models.Model):
    name = models.CharField(max_length=25)
    date = models.DateField()
    location = models.CharField(max_length=50)
    sport = models.ForeignKey(Sport)
    swim_distance = models.FloatField()
    bike_distance = models.FloatField()
    run_distance = models.FloatField()
    recap = models.CharField(max_length=250)
    bib_number = models.Integer()
    results_url = models.URLField()
    finish_overall = models.IntegerField()
    finishers_overall = models.IntegerField()
    finish_gender = models.IntegerField()
    finishers_gender = models.IntegerField()
    finish_age_group = models.IntegerField()
    finishers_age_group = models.IntegerField()
